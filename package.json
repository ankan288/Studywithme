{
  "name": "studywithme",
  "private": true,
  "version": "1.0.0",
  "description": "StudyWithMe - Ethical Depth-Driven Learning Platform",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend-student && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend-student && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend-student && npm install"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "concurrently": "^8.2.2",
    "typescript": "~5.8.2"
  }
}